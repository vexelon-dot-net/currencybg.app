<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:padding="4dp">

    <TextView
        android:id="@+id/header_currencies_rate"
        style="@style/FontListHeaderRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8sp"
        android:layout_toRightOf="@id/icon"
        android:layout_weight="2"
        android:text="@string/buy"/>

    <TextView
        android:id="@+id/header_src_1"
        style="@style/FontListHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:ellipsize="end"
        android:gravity="right"
        android:maxLines="1"
        android:text=""/>

    <TextView
        android:id="@+id/header_src_2"
        style="@style/FontListHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/header_src_1"
        android:layout_weight="1.0"
        android:ellipsize="end"
        android:gravity="right"
        android:maxLines="1"
        android:paddingLeft="6sp"
        android:text=""/>

    <TextView
        android:id="@+id/header_src_3"
        style="@style/FontListHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/header_src_2"
        android:layout_weight="1.0"
        android:ellipsize="end"
        android:gravity="right"
        android:maxLines="1"
        android:paddingLeft="6sp"
        android:text=""/>

</LinearLayout>
