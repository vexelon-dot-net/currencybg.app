<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="FontListCode" parent="@android:style/TextAppearance">
        <item name="android:textColor">#D3D3D3</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontList" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="FontListRatioRate" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FontListRateDecimals" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="FontStyleConvertHint" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FontStyleConvert" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#D3D3D3</item>
    </style>      
    
</resources>
